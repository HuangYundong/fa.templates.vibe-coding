{
    "servers": {
        "playwright-mcp": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@playwright/mcp@latest",
                "--caps=vision"
            ]
        },
        "react-bits-mcp": {
            "command": "npx",
            "args": ["-y", "reactbits-dev-mcp-server"]
        },
        "Gaia": {
            "type": "stdio",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                ".github/mcps/gaia/src/fa.mcp.gaia/fa.mcp.gaia.csproj"
            ]
        }
    }
}