{
    "servers": {
        "Context7": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ]
        },
        "playwright-mcp": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@playwright/mcp@latest",
                "--vision"
            ]
        },
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory",
                "-v",
                "claude-memory:.github/state/"
            ]
        },
        "Gaia": {
            "type": "stdio",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                ".github/mcps/gaia/src/fa.mcp.gaia/fa.mcp.gaia.csproj"
            ]
        }
    }
}